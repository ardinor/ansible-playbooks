# {{ ansible_managed }}

input {
  file {
    type => "syslog"

    # Wildcards work, here :)
    path => [ "/var/log/*.log", "/var/log/messages", "/var/log/syslog" ]
    #sincedb_path => "/opt/logstash/sincedb-access"
  }
  redis {
    host => "127.0.0.1"
    type => "redis-input"
    data_type => "list"
    key => "logstash"
  }
  syslog {
    type => "syslog"
    port => "5544"
  }

}

filter {

}

output {
 elasticsearch { bind_host => "127.0.0.1" }
}
