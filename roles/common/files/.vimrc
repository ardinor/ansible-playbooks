syntax on

set nocompatible

filetype plugin on
filetype indent on

set ruler

set autoindent smartindent

set smarttab

set expandtab

set tabstop=4
set shiftwidth=4

set showmatch

set incsearch

set autoread

set hid

set ignorecase

set smartcase

set encoding=utf-8
set fileencoding=utf-8

" <Ctrl-l> redraws the screen and removes any search highlighting.
nnoremap <silent> <C-l> :nohl<CR><C-l>
